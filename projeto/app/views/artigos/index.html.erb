<p id="notice"><%= notice %></p>

<h1>Todos os Artigos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Data</th>
      <th>Descrição</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artigos.each do |artigo| %>
      <tr>
        <td><%= link_to artigo.titulo, artigo %></td>
        <td><%= artigo.data.strftime("%d/%m/%Y às %H:%M") %></td>
        <td><%=  artigo.subtitulo %></td>
        <td><%= artigo.user.nome %></td>
        <td><%= link_to 'Edit', edit_artigo_path(artigo) %></td>
        <% if (current_user.is_adm == true) %>
          <td><%= link_to 'Destroy', artigo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


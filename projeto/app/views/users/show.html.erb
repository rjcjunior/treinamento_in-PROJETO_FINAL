    <div class="col-md-3 perfilOpcoes">
      <%= image_tag "lobo_icon.jpg", class: "fotoUsuario" %>
        <p id="nomeUsuario">
          <%= @user.nome %>
        </p>
        <div id="botaoPerfilUsuario">
          <%= link_to 'Perfil' %>
        </div>
        <div id="botaoPerfilEstatistica">
          <%= link_to 'Estatisticas' %>
        </div>
        <div id="botaoEditarPerfil">
          <%= link_to 'Editar Perfil', edit_user_path(@user) %>
        </div>
        
        
    </div>
    <div class="col-md-9 perfil"> 
      <h2 id="headUsuario">Usu√°rio</h2>

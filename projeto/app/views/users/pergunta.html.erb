<% provide(:title, "Usuarios") %>
<% @users.each do |user1|%>
            <%= user1.pergunta %>
            <%= form_for(user1) do |f| %> <!--Formulario para criar resposta -->
                        <%= f.password_field :password, :required => true %>
                        <%= f.password_field :password_confirmation, :required => true %>
                        <%= f.submit "mudar"%>
            <%end%>
<%end%>

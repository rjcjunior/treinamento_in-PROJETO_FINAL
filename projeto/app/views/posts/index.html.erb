<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Conteudo</th>
      <th>Data</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.post_id==nil %> <!-- para exibir somente perguntas-->
        <tr>
          <td><%= link_to post.titulo, post %></td>
          <td><%= raw post.conteudo %></td>
          <td><%= post.data %></td>
          <td><%= post.user.nome %></td>
          <% if post.user_id == current_user.id or current_user.is_adm == true %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

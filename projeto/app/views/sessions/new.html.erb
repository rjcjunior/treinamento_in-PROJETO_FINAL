<% provide(:title, "Login") %>

<html>
	<style>
@import url('https://fonts.googleapis.com/css?family=Yellowtail');
<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
</style>
<body class="bodyLogin">
	<header>
		<img src="app/assets/images/logo-branca-mini-2.png" class="logo">
		<p class="textLogo">kipedia</p>
    <div class="login">
            <%= form_for(:session, url: login_path) do |f| %>
			<%= f.label :email, class:"labelEmail" %>
            <%= f.text_field :email, class:"email"%>
			<%= f.label :password, class:"labelSenha" %>
            <%= f.password_field :password, class:"senha" %>
            <br>
            <%= f.submit "Log in", class:"botaoLogin" %>
			<br>
			<div class="esqueceuSenha">
				Esqueceu a senha? <%= link_to "Clique aqui", new_password_reset_path %>
			</div>

        <% end %>
	</div>
	</header>
		
</body>
</html>